@model BlogProject.Models.Teacher
@{
    ViewBag.Title = "DeleteConfirm";
}
<div id="containershow">
    <button class="backbtn"><a href="/Teacher/Show/@Model.TeacherId">Cancel</a></button>
    <h2>Are you sure you want to delete @Model.TeacherFname @Model.TeacherLname?</h2>
    <p>This action cannot be undone</p>
    <form method="POST" action="/Teacher/Delete/@Model.TeacherId">
        <button style="margin-top: 20px;">Confirm Delete</button>
    </form>
</div>